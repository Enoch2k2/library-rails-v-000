<h1>Add a new Book</h1>
<%= form_for @book do |f| %>
  <%= f.label "Title: " %> <%= f.text_field :title %><br><br>

  <%= f.label "Price(don't use decimal, but include the change): " %> <%= f.text_field :price %><br><br>

  <%= f.label "Select Existing Author: " %>
  <%= f.collection_select :author_id, Author.all, :id, :name, include_blank: true %>
  <br>

  <p>Or</p>

  <%= f.fields_for :author_attribute, @book.author do |author_field| %>
    <%= author_field.label "New Author Name: " %>
    <%= author_field.text_field :name %>
  <% end %>
  <br><br>

  <%= f.label "Select Existing Genre: " %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: true %>
  <br>

  <p>Or</p>

  <%= f.fields_for :genre_attribute, @book.genre do |genre_field| %>
    <%= genre_field.label "Genre Name: " %>
    <%= genre_field.text_field :name %>
  <% end %>
  <br><br>
  <%= f.submit "Add Book" %>
<% end %>
