<h1><%= @genre.name %></h1>
<label>Books: </label>
<ul>
  <% @genre.books.each do |book| %>
    <li><%= link_to book.title, book_path(book) %></li>
  <% end %>
</ul>
<br>
<label>Authors: </label>
<ul>
  <% @genre.authors.uniq.each do |author| %>
    <li><%= link_to author.name, author_path(author) %></li>
  <% end %>
</ul>
